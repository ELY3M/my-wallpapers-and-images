function updateApplicationLoadtime(time){
if(typeof $('confoLoadtime') != undefined){
$('confoLoadtime').innerHTML = "Loadtime: "+time+" ms";
}
}
function transferSessionToCanonicalDomain(){
var targetHost = hostnameFromUri('http://www.spreadshirt.com');
var sourceHost = hostnameFromUri(window.location);
var transferUrl = '';
var transferPixel = '';
if(sourceHost != targetHost && sessionCanBeTransferred(sourceHost, targetHost)){
transferUrl = sessionTransferUrl(targetHost);
transferPixel = document.createElement('img');
transferPixel.src = transferUrl;
transferPixel.width = 1;
transferPixel.height = 1;
transferPixel.border = 0;
transferPixel.alt = '';
document.body.appendChild(transferPixel);
}
}
function moveFocusToConfomat(){
if($('Confomat')){
$('Confomat').focus();
}
}
function onUserAuthenticated() {
updatePage(ajaxBaseUrl + '/');
}
Event.observe(window, 'load', moveFocusToConfomat);
Event.observe(window, 'load', transferSessionToCanonicalDomain);
confomat.subscribe('applicationLoaded', updateApplicationLoadtime);
confomat.subscribe('userLoggedIn', onUserAuthenticated);
